<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/games.css">

<div class="row">
    <% games.forEach(function(game) { %>
        <div class="col s12 m6 l4">
            <div class="card grey darken-3">
                <div class="card-image">
                    <a href="/games/<%= game._id %>"><img src="<%= game.art %>"></a>
                </div>
                <div class="card-content">
                    <span class="card-title truncate white-text"><%= game.title %></span>
                </div>
                <div class="card-action">
                    <a class="teal-text text-lighten-1" href="/games/<%= game._id %>">Reviews</a>
                </div>
            </div>
        </div>
    <% }); %>        
</div>

<%- include('../partials/footer') %>
